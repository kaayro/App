<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"

        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.igitsoft.tourin"
        version     = "1.0.0"
        versionCode = "1" >

        <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="cli-6.5.0" />
		<preference name="orientation" value="portrait" />
		<preference name="fullscreen" value="true" />
		<preference name="android-build-tool" value="gradle" />

        <name>TourIn'</name>

        <description>
            Encuentra gu√≠as locales con el perfil que tu buscas. 
        </description>

        <author href="http://igitsoft.com" email="info@igitsoft.com">
            iGitApps
        </author>
		<icon src="img/isoWeb.png" />
		
		<platform name="ios" />
		<platform name="android" />
		
		<plugin name="com.phonegap.plugins.barcodescanner" source="npm" />
		<plugin name="cordova-plugin-whitelist" source="npm" />
		
		<allow-navigation href="http://*/*" />
		<allow-navigation href="https://*/*" />
		<allow-navigation href="data:*" />
		
		<access origin="*" />
		
    </widget>